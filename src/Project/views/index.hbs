    <!-- Product Section Begin -->
    <section class="product spad">
      <div class="container">
        <div class="row">
          <div class="col-lg-8">
            <div class="trending__product">
              <div class="row">
                <div class="col-lg-8 col-md-8 col-sm-8">
                  <div class="section-title">
                    <h4>Trending Now</h4>
                  </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4">
                  <div class="btn__all">
                    <a href="/categories" class="primary-btn"
                      >View All <span class="arrow_right"></span
                    ></a>
                  </div>
                </div>
              </div>
              <div class="row">
                {{#each movies}}
                <a href="/{{_id}}">
                  
                <div class="col-lg-4 col-md-6 col-sm-6">
                  
                  <div class="product__item" x-data="{bg: '{{imageTopic.[0]}}' }">
                  <div class="product__item__pic" @mouseover="bg = '{{imageTopic.[1]}}'"
                    @mouseout="bg = '{{imageTopic.[0]}}'"
                    x-bind:style="'background: url(' + bg + ') no-repeat center / cover;'" >
                    
                      <div class="ep">{{episode}}</div>
                      <div class="comment">
                        <i class="fa fa-comments"></i> 11
                      </div>
                      <div class="view"><i class="fa fa-eye"></i> {{author}}</div>
                    </div>
                    <div class="product__item__text">
                      <ul>
                        <li>{{type}}</li>
                        <li>{{genre}}</li>
                      </ul>
                      <h5>
                        <a href="/{{_id}}">{{movieName}}</a>
                      </h5>
                    </div>
                  </div>
                </div>

              </a>
              {{/each}}
            </div>
          </div>
            <div class="recent__product">
              <div class="row">
                <div class="col-lg-8 col-md-8 col-sm-8">
                  <div class="section-title">
                    <h4>Recently Added Shows</h4>
                  </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4">
                  <div class="btn__all">
                    <a href="/review" class="primary-btn"
                      >View All <span class="arrow_right"></span
                    ></a>
                  </div>
                </div>
              </div>
              <div class="row">
                {{#each recent}}
                <a href="/{{_id}}">
                <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="product__item" x-data="{bg: '{{imageTopic.[0]}}' }">
                  <div class="product__item__pic" @mouseover="bg = '{{imageTopic.[1]}}'"
                    @mouseout="bg = '{{imageTopic.[0]}}'"
                    x-bind:style="'background: url(' + bg + ') no-repeat center / cover;'" >
                      <div class="ep">{{episode}}</div>
                      <div class="comment">
                        <i class="fa fa-comments"></i> 11
                      </div>
                      <div class="view"><i class="fa fa-eye"></i> {{author}}</div>
                    </div>
                    <div class="product__item__text">
                      <ul>
                        <li>{{type}}</li>
                        <li>{{genre}}</li>
                      </ul>
                      <h5><a href="/{{_id}}">{{movieName}}</a></h5>
                    </div>
                  </div>
                </div>
                </a>
                {{/each}}
              </div>
            </div>
          </div>

          <div class="col-lg-4 col-md-6 col-sm-8">
            <div class="product__sidebar">
              <div class="product__sidebar__view">
                <div class="section-title">
                  <h5>Movie Ranking</h5>
                </div>
                <ul class="filter__controls">
                  <li class="active" data-filter="*">Day</li>
                  <li data-filter=".week">Week</li>
                  <li data-filter=".month">Month</li>
                  <li data-filter=".years">Years</li>
                </ul>
                <div class="filter__gallery">
                  {{#each hot}}
                  
                  <div
                    class="product__sidebar__view__item set-bg mix day years"
                    data-setbg="{{imageTopic.[0]}} "  style="cursor: pointer;" onclick="window.location='/{{_id}}';"
                  >
                    <div class="ep">{{episode}}</div>
                    <div class="view"><i class="fa fa-eye"></i> {{author}}</div>
                    <h5><a href="/{{_id}}">{{movieName}}</a></h5>
                  </div>

                  {{/each}}
                </div>
              </div>
            
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Product Section End -->
