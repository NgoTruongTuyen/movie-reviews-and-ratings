
    <!-- Normal Breadcrumb Begin -->
    <section class="normal-breadcrumb set-bg" data-setbg="/img/normal-breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="normal__breadcrumb__text">
                        <h2>Sign Up</h2>
                        <p>Welcome to the official Moview Review.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Normal Breadcrumb End -->

    <!-- Signup Section Begin -->
    <section class="signup spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="login__form">
                        <h3>Supply your information</h3>
                        {{#if username_existed}}
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <strong>This username is already existed!!!</strong>
                                <button type="button" class="close" onclick="this.parentElement.style.display='none'">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        {{/if}}
                        {{#if email_existed}}
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <strong>This email is already existed!!!</strong>
                                <button type="button" class="close" onclick="this.parentElement.style.display='none'">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        {{/if}}
                        <form action="/auth/register" method="post">
                            <div class="input__item">
                                <input type="text" placeholder="Email address" name="email">
                                <span class="icon_mail"></span>
                            </div>
                            <div class="input__item">
                                <input type="text" placeholder="Your Full Name" name="name">
                                <span class="icon_profile"></span>
                            </div>
                            <div class="input__item">
                              <input type="text" placeholder="Username" name="username">
                                <span class="icon_drawer"></span>
                          </div>
                            <div class="input__item">
                                <input type="password" placeholder="Password" name="password">
                                <span class="icon_lock"></span>
                            </div>
                            <button type="submit" class="site-btn">Submit</button>
                        </form>
                        <h5>Already have an account? <a href="/auth/login">Log In!</a></h5>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="login__social__links">
                        <h3>Login With:</h3>
                        <ul>
                            <li><a href="#" class="google"><i class="fa fa-google"></i> Sign in With Google</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Signup Section End -->
