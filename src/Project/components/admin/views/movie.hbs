<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">MOVIES</h4>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Movie</th>
                        <th>Name</th>
                        <th>Progress</th>
                        <th>Status</th>
                        <th>Last modify</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each movieList}}
                        <tr>
                            <td class="py-1">
                                <img src="{{this.images.[0]}}" alt="image" />
                            </td>
                            <td>{{this.movieName}}</td>
                            <td>
                                <div class="progress">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </td>
                            <td>{{this.episode}}</td>
                            <td>November 15, 2021</td>
                            <td>
                                <div class="dropdown">
                                    <button class="btn btn-warning dropdown-toggle" type="button" id="dropdownMenuIconButton1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="mdi mdi-earth"></i>
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuIconButton1">
                                        <h6 class="dropdown-header">Settings</h6>
                                        <a class="dropdown-item" href="/admin/updateMovie/{{this._id}}">Edit</a>
                                        <a class="dropdown-item" href="/admin/movie/delete/{{this._id}}">Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>